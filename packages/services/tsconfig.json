{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "allowJs": true,
    "lib": ["dom", "es2017"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2017",
    "declaration": true,
    "jsx": "react"
  },
  "include": ["src"]
}
